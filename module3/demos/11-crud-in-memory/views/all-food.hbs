{{#extends "base"}}
  {{#block "content"}}
    <div class="container">

      <a href="/add-food" class="btn btn-primary">Add New Item</a>

      {{#each allFood}}
        <div class="card mb-4" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">{{this.foodName}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">Calories:
              {{this.calories}}</h6>
            <p class="card-text">
              {{this.meal}}
              <h5>Tags</h5>
              {{this.tags}}
            </p>
            <a href="#" class="btn btn-primary card-link">Edit</a>
            <a href="#" class="btn btn-danger card-link">Delete</a>
          </div>
        </div>
      {{/each}}
    </div>
  {{/block}}
{{/extends}}