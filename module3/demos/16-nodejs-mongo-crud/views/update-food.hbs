{{#extends "base"}}
  {{#block "content"}}
      <form method="POST">
      <div>
        <label class="form-label">Food Name: </label>
        <input type="text" class="form-control" name="foodRecordName" value="{{foodRecord.foodRecordName}}"/>

        <label class="form-label">Calories: </label>
        <input type="text" class="form-control" name="calories" value="{{foodRecord.calories}}"/>

        <label class="form-label">Tags:</label>
        <input
          type="checkbox"
          name="tags"
          value="vegan"
          class="form-check-input"
          {{#inArray foodRecord.tags "vegan"}}checked{{/inArray}}
        />
        <label class="form-check-label">Vegan</label>
        <input
          type="checkbox"
          name="tags"
          value="meat-lover"
          class="form-check-input"
          {{#inArray foodRecord.tags "meat-lover"}}checked{{/inArray}}
        /><label class="form-check-label">Meat Lover</label>
        <input
          type="checkbox"
          name="tags"
          value="healthy"
          class="form-check-input"
          {{#inArray foodRecord.tags "healthy"}}checked{{/inArray}}
        /><label class="form-check-label"
        >Healthy</label>
        <input
          type="checkbox"
          name="tags"
          value="fast-food"
          class="form-check-input"
          {{#inArray foodRecord.tags "fast-food"}}checked{{/inArray}}
        /><label class="form-check-label">Fast Food</label>

        <input type="submit" value="Update Food" class="btn btn-primary" />
        <!--<button type="submit">Add Food</button>-->
      </div>

    </form>
  {{/block}}
{{/extends}}