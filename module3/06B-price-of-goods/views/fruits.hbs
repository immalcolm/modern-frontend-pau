{{#extends "base"}}    
    {{#block "fruits"}}
    
        <h1>Fruity Land!</h1>
        <!-- no need to enter action because its mapping to itself-->
        <form method="POST">
            <label for="items">Fruits</label>
            <input type="checkbox" name="items" value="durian">Durian
            <input type="checkbox" name="items" value="apple">Apple
            <input type="checkbox" name="items" value="orange">Orange
            <input type="checkbox" name="items" value="banana">Banana
            <input type="submit" value="Calculate Fruits">
        </form>
    {{/block}}
{{/extends}}